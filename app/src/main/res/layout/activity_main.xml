<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/background"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morty Smith"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerImageView"
        android:textSize="30dp"
        android:layout_margin="14dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/gender"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_male_24"
        app:layout_constraintTop_toTopOf="@id/fullName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="14dp"/>

    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="14dp"
        android:text="Origin"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/origin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/origin"
        android:textSize="19dp"
        android:layout_marginStart="14dp"
        android:textStyle="italic"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Species"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/origin2"
        android:textSize="25dp"
        android:layout_margin="14dp"
        android:textStyle="italic"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/species2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Human"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/species"
        android:textSize="19dp"
        android:layout_marginStart="14dp"
        android:textStyle="italic"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/alive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullName"
        android:textSize="20dp"
        android:layout_marginStart="14dp"
        android:textStyle="italic"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/alive"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="@id/gender"
        app:layout_constraintStart_toStartOf="@id/alive"
        android:background="@color/black"/>









</androidx.constraintlayout.widget.ConstraintLayout>